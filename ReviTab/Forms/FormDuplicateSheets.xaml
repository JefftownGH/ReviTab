<Window x:Class="ReviTab.Forms.FormDuplicateSheets"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ReviTab.Forms"
             mc:Ignorable="d" Width="490.164" Height="464.755" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,10,10,0" Height="414" VerticalAlignment="Top" HorizontalAlignment="Right" Width="462">

        <Button Content="OK" Height="30" Margin="0,353,377,0" Width="85" Click="Button_Click" HorizontalAlignment="Right" VerticalAlignment="Top"></Button>

        <Button Content="Cancel" Height="30" Margin="266,361,0,0" Click="Button_Click_1" VerticalAlignment="Top" HorizontalAlignment="Left" Width="196"/>

        <ListBox Name="listBoxZone" ItemsSource="{Binding SheetsList}" Background="AntiqueWhite" Margin="0,0,196,70">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <CheckBox Name="CheckBoxZone" Content="{Binding SheetNumber}"
     Tag="{Binding TheValue}" Checked="CheckBoxZone_Checked"  
     Margin="0,5,0,0"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>


    </Grid>
</Window>
